{
  "name": "resuelve-soccersalary-back-end-challenge",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start": "nodemon --exec babel-node src/server.js",
    "build": "babel src --out-dir dist --ignore src/test",
    "serve": "rm -r dist/test && node dist/server.js",
    "localprod": "npm install && npm run build && cross-env PORT=80 NODE_ENV=production npm run serve",
    "test": "babel src --out-dir dist && mocha 'dist/test/**/*.js'",
    "lint": "eslint src/"
  },
  "dependencies": {
    "ajv": "^6.10.0",
    "compression": "^1.7.4",
    "cookie-parser": "~1.4.4",
    "debug": "~2.6.9",
    "express": "~4.16.1",
    "lodash": "^4.17.11",
    "morgan": "~1.9.1",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.5",
    "@babel/node": "^7.4.5",
    "@babel/preset-env": "^7.4.5",
    "@babel/register": "^7.4.4",
    "chai": "^4.2.0",
    "cross-env": "^5.2.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.17.3",
    "mocha": "^6.1.4",
    "nodemon": "^1.19.1"
  }
}
